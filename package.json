{
  "name": "@kie/package-json-treatment-tool",
  "version": "1.0.0",
  "description": "a js tool to treat package.json files.",
  "main": "./bin/cli.js",
  "bin": {
    "package-json-tt": "./bin/cli.js"
  },
  "scripts": {
    "test": "jest",
    "ncc-build": "ncc build index.js",
    "lint": "eslint .",
    "prettier": "prettier -l src/** test/**/*.js",
    "prettier-write": "prettier --write .",
    "lint-final": "npm run prettier && npm run lint",
    "prepublish": "npm run lint && npm run test"
  },
  "git-pre-hooks": {
    "pre-commit": "npm run prettier && npm run ncc-build && git add dist/index.js",
    "pre-push": "npm ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiegroup/package-json-treatment-tool.git"
  },
  "keywords": [
    "package.json",
    "name",
    "scope"
  ],
  "author": "Enrique Mingorance Cano <emingora@redhat.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kiegroup/package-json-treatment-tool/issues"
  },
  "homepage": "https://github.com/kiegroup/package-json-treatment-tool#readme",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "argparse": "^2.0.1",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@actions/io": "^1.0.2",
    "@zeit/ncc": "^0.22.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.19.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-pre-hooks": "^1.2.1",
    "jest": "^25.5.1",
    "jest-expect-message": "^1.0.2",
    "prettier": "^2.0.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "engines": {
    "node": ">= 10.x"
  }
}
